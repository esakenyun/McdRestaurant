<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lokasi">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/helloname"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-40dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/buathbatulokasi"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mcdbubat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:text="Store"
        android:textColor="@color/textview"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lokasi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="267dp"
        android:layout_marginTop="-23dp"
        android:textColor="@color/textview"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:text="Location"
        android:textColor="@color/textview"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="342dp"
        android:layout_marginTop="-25dp"
        android:src="@drawable/location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="-24dp"
        android:text="Find on Maps"
        android:textColor="@color/textview"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/seeMenusButton"
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:backgroundTint="@color/button"
        android:layout_marginTop="30dp"
        android:text="See Menus"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="0dp"
        app:strokeColor="@color/kuning"
        app:strokeWidth="1dp" />
</LinearLayout>